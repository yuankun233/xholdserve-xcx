/* pages/home/login/login.wxss */
page{
  background: #fff;
}
.app-radio{
  margin-top: 20rpx;
}
/* 导航 */
.login{
  width: 750rpx;
	/* height: 400rpx; */
	background-color: #ff6d6d;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
}
.title_box{
  width: 750rpx;
  height: 40rpx;
  display: flex;
  margin-top: 20rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 2rpx;
  color: #ffffff;
 
}
.title_box>view{
  width: 375rpx;
  height: 40rpx;
  margin-left:180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.select{
  margin-top: 14rpx;
  width: 750rpx;
  display: flex;
}
.select>view{
  width: 375rpx;
  height: 25rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-sizing: border-box;
}
.select>view>image{
  width: 155rpx;
	height: 100rpx;
}
/* 登陆 */
.group1{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 44rpx;
	letter-spacing: 1rpx;
  color: #444444;
}
/* 手机号 */
.group1_1{
  width: 670rpx;
	height: 80rpx;
	background-color: #f2f2f2;
	border-radius: 40rpx;
  margin-top: 64rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 50rpx;
}
.input1{
  flex: 1;
}
/* 验证码 */
.group1_2{
  width: 670rpx;
	height: 80rpx;
	background-color: #f2f2f2;
	border-radius: 40rpx;
  margin-top: 34rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 50rpx;
}
.input2{
  flex: 1;
}
.code{
  padding: 0 14rpx;
}
.group1_3{
  width: 670rpx;
	height: 80rpx;
  line-height: 80rpx;
	background-color: #ff6d6d;
	border-radius: 40rpx;
  margin-top: 64rpx;
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2rpx;
	color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.group1_bottom{
  margin-top: 100rpx;
  display: flex;
}
.bottom_1{
  color: #ff6d6d;
}


/* 的做法是对接开发VBUK是不是你看是有十多人广佛饿啊 */
.content{
  margin: 0 auto;
  margin-top:28rpx;
  height: 90rpx;
  background: #ededed;
  color: #666;
  border-radius: 10px;
  display:flex;
  justify-content:center;
  align-items:center;
  font-size:16px;
 
}
.box {
  height: 100%;
  background-color: #ff6d6d;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.movable-icon{
  width: 60rpx;
  height: 100%;
  background: url(data:image/png;base64,) no-repeat center center;
  background-size: 100% 100%;
}